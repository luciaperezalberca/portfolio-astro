---
import '@fontsource-variable/manrope';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactWApp from '../components/ContactWApp.astro';

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
  		<meta charset="UTF-8" />
  		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  		<meta http-equiv="Content-Language" content="es" />
  		<meta name="description" content={description} />
  		<meta name="keywords" content="Lucia Perez Alberca, UX, Diseño Web, Desarrollo Frontend, Portfolio UX, Arte Visual, Argentina" />
  		<meta name="author" content="Lucia Perez Alberca" />
  		<meta name="robots" content="index, follow" />
  		<meta name="generator" content={Astro.generator} />

  		<link rel="canonical" href="https://luciaperezalberca.netlify.app/" />
  		<link rel="icon" type="image/png" href="/images/favicon.png" />

  		<title>{title}</title>

  		<!-- Open Graph Meta Tags -->
  		<meta property="og:title" content="Lucia Perez Alberca | Portfolio Diseño & Desarrollo Web" />
  		<meta property="og:description" content="Portfolio de Lucia Perez Alberca. Experiencia en diseño, desarrollo web y arte." />
  		<meta property="og:image" content="https://luciaperezalberca.netlify.app/images/og-image.png" />
  		<meta property="og:url" content="https://luciaperezalberca.netlify.app/" />
  		<meta property="og:type" content="website" />
	</head>

	<body>
		<div id="top" class="absolute -top-20"></div>
		<Header />
		<slot />
		<ContactWApp />
		<Footer />
	</body>

</html>
<style is:global>
	:root {
		color-scheme: light;	
	}

	html {
		font-family:'Manrope Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background: #ffff;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

</style>