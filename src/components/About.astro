<script is:inline>
        window.addEventListener('DOMContentLoaded', () => {
                const carousel = document.getElementById('carouselservices');
                const prevBtn = document.getElementById('prevServices');
                const nextBtn = document.getElementById('nextServices');
                const items = carousel.children;
                let index = 0;

                const getItemsPerView = () => {
                        if (window.innerWidth >= 1024) return 4;
                        if (window.innerWidth >= 768) return 3;
                        if (window.innerWidth >= 640) return 2;
                        return 1;
                };

                const updateButtons = () => {
                        const perView = getItemsPerView();
                        const maxIndex = items.length - perView;

                        prevBtn.classList.toggle('hidden', index === 0);
                        nextBtn.classList.toggle('hidden', index >= maxIndex);
                };

                const updateCarousel = () => {
                        const perView = getItemsPerView();
                        const movePercent = (100 / perView) * index;
                        carousel.style.transform = `translateX(-${movePercent}%)`;
                        updateButtons();
                };

                const goNext = () => {
                        const perView = getItemsPerView();
                        const maxIndex = items.length - perView;
                        if (index < maxIndex) {
                                index++;
                                updateCarousel();
                        }
                };

                const goPrev = () => {
                        if (index > 0) {
                                index--;
                                updateCarousel();
                        }
                };

                prevBtn.addEventListener('click', goPrev);
                nextBtn.addEventListener('click', goNext);
                window.addEventListener('resize', updateCarousel);

                updateCarousel();
        });
</script>