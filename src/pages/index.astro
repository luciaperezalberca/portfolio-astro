---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import InstagramIcon from '../components/icons/Instagram.astro';
import SendEmailIcon from '../components/icons/SendEmail.astro';
import CodeIcon from '../components/icons/Code.astro';
import DesignIcon from '../components/icons/Design.astro';
import ArtIcon from '../components/icons/Art.astro';
import ProjectsWeb from '../components/ProjectsWeb.astro';
import ProjectsDesign from  '../components/ProjectsDesign.astro';
import ProjectsArt from '../components/ProjectsArt.astro';
import About from '../components/About.astro';
---

<Layout 
	title="Portfolio de Lucia Perez Alberca - Desarrolladora Web, Diseñadora y Artista Visual"
	description="Contrata a Lucia para crear tu sitio web completo. Incluido el diseño, la edición de imágenes y programación.">
	<main>
		<section class="bg-gray-400/10 flex flex-col md:flex-row w-full p-10 justify-center items-center gap-20 md:gap-6 xl:gap-x-24">
			<div class="m-10">
				<h1 class="text-black text-3xl font-bold mb-1"> Hola! Soy Lucia. </h1>
				<h2 class="text-md opacity-80 text-wrap mb-4"> Desarrolladora web, Diseñadora y Artista Visual </h2>
				<nav class="flex items-center gap-x-3 xl:mt-8">
					<a 
						href="/files/LuciaPerezAlberca-resume.pdf" 
						download="LuciaPerezAlberca-resume.pdf" 
						class="shadow-md shadow-gray-950 bg-black/80 text-white hover:bg-gray-950/70 hover:scale-105 px-4 py-2 rounded-lg"> 
						Descargar CV 
					</a>
					<a 
        					class="rounded-full flex justify-center items-center gap-x-2 px-1 hover:scale-110" 
        					target="_blank"
						rel="noopener noreferrer"
        					href="https://www.linkedin.com/in/luciaperezalberca/"> 
						<LinkedInIcon class="size-8 hover:opacity-50"/>
					</a>
					<a 
        					class="rounded-full flex justify-center items-center gap-x-2 px-1 hover:scale-110" 
        					target="_blank"
						rel="noopener noreferrer"
        					href="https://www.instagram.com/luciaperezalberca/"> 
						<InstagramIcon class="size-8 hover:opacity-50"/>	
					</a>
					<a 
        					class="rounded-full flex justify-center items-center gap-x-2 px-1 hover:scale-110" 
        					target="_blank"
						rel="noopener noreferrer"
        					href="mailto:luciaperezalberca@gmail.com"> 
						<SendEmailIcon class="size-7 hover:opacity-50"/>
					</a>
				</nav>
			</div>
			<img 
				class="w-full h-auto sm:w-3/4 sm:rounded-lg md:w-80 lg:w-1/3 xl:w-2/5 mb-20"
				src="/images/ilustracion-home.webp" 
				alt="imagen de Lucia"
			> 
		</section>
		<div class="flex justify-center items-center gap-x-2 text-2xl mt-10" id="proyectos">
			<CodeIcon />
			Desarrollo Web 
		</div>
		<SectionContainer> 
			<ProjectsWeb />
		</SectionContainer>
		<div class="flex justify-center items-center gap-x-2 text-2xl mt-20">
			<DesignIcon />
			Diseño 
		</div>
		<SectionContainer> 
			<ProjectsDesign/>
		</SectionContainer>
		<div class="flex justify-center items-center gap-x-2 text-2xl mt-10">
			<ArtIcon />
			Arte
		</div>
		<SectionContainer> 
			<ProjectsArt />
		</SectionContainer>
		<About />	
	</main>
</Layout>